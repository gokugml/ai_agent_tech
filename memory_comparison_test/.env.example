# 记忆框架对比测试环境配置

# =============================================================================
# 框架模式选择
# =============================================================================

# MemU 框架模式: cloud (云版本) 或 selfhost (自托管版本)
MEMU_MODE=cloud

# Memobase 框架模式: selfhost (目前仅支持自托管)
MEMOBASE_MODE=selfhost

# =============================================================================
# MemU 配置
# =============================================================================

# MemU 云版本配置
MEMU_CLOUD_API_KEY=your_memu_api_key_here
MEMU_CLOUD_BASE_URL=https://api.memu.so

# MemU 自托管配置
MEMU_SELFHOST_URL=http://localhost:8080
MEMU_SELFHOST_API_KEY=memu_selfhost_key

# MemU 需要的 OpenAI API Key（用于记忆处理）
OPENAI_API_KEY=your_openai_key_here

# =============================================================================
# Memobase 配置
# =============================================================================

# Memobase 服务器配置
MEMOBASE_URL=http://localhost:8019
MEMOBASE_API_KEY=secret

# Memobase 数据库配置（自托管时使用）
POSTGRES_DB=memobase
POSTGRES_USER=memobase
POSTGRES_PASSWORD=memobase_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Memobase Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# =============================================================================
# 测试配置
# =============================================================================

# 测试用户ID前缀
TEST_USER_PREFIX=test_user

# 测试并发设置
MAX_CONCURRENT_TESTS=3

# 测试超时设置（秒）
TEST_TIMEOUT=300

# 是否保留测试数据（用于调试）
KEEP_TEST_DATA=false

# =============================================================================
# 日志配置
# =============================================================================

# 日志级别: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# 日志文件路径
LOG_FILE_PATH=./logs/memory_comparison_test.log

# =============================================================================
# Docker 配置
# =============================================================================

# Docker 网络名称
DOCKER_NETWORK_NAME=memory_test_network

# 数据卷前缀
VOLUME_PREFIX=memory_test