# Memobase 服务环境变量配置
# 基于官方文档 .env.example

# 数据库连接
DATABASE_URL=postgresql://memobase:memobase_password@memobase-postgres:5432/memobase

# Redis 连接  
REDIS_URL=redis://memobase-redis:6379/0

# 服务配置
MEMOBASE_PORT=8000
MEMOBASE_ACCESS_TOKEN=secret

# AI 配置（可以在 config.yaml 中被覆盖）
OPENAI_API_KEY=sk-placeholder-key

# LLM 配置覆盖（可选）
MEMOBASE_LLM_API_KEY=sk-placeholder-key
MEMOBASE_LLM_BASE_URL=https://api.openai.com/v1
MEMOBASE_BEST_LLM_MODEL=gpt-3.5-turbo

# Embedding 配置覆盖（可选）
MEMOBASE_EMBEDDING_API_KEY=sk-placeholder-key
MEMOBASE_EMBEDDING_BASE_URL=https://api.openai.com/v1
MEMOBASE_EMBEDDING_MODEL=text-embedding-ada-002

# 其他配置
MEMOBASE_ENABLE_EVENT_EMBEDDING=true
MEMOBASE_MAX_TOKEN_SIZE=4000